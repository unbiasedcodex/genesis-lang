// Test exhaustiveness checking

fn test_bool(x: bool) -> i64 {
    // This is exhaustive - covers both true and false
    match x {
        true => 1,
        false => 0,
    }
}

fn test_option_exhaustive(opt: Option<i64>) -> i64 {
    // This is exhaustive - covers Some and None
    match opt {
        Some(v) => v,
        None => 0,
    }
}

fn test_result_exhaustive(res: Result<i64, i64>) -> i64 {
    // This is exhaustive - covers Ok and Err
    match res {
        Ok(v) => v,
        Err(e) => e,
    }
}

fn test_wildcard(x: i64) -> i64 {
    // Wildcard makes it exhaustive
    match x {
        1 => 100,
        2 => 200,
        _ => 0,
    }
}

fn main() -> i64 {
    println("=== Exhaustiveness Test ===")

    let b = test_bool(true)
    print("test_bool(true) = ")
    println(b)

    let o = test_option_exhaustive(Option::Some(42))
    print("test_option(Some(42)) = ")
    println(o)

    let r = test_result_exhaustive(Result::Ok(100))
    print("test_result(Ok(100)) = ")
    println(r)

    let w = test_wildcard(5)
    print("test_wildcard(5) = ")
    println(w)

    println("All exhaustive patterns passed!")
    0
}
